<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Termandcondition">


    <LinearLayout
        android:id="@+id/oneLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/signin_page_background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/backIconImageButton"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="310dp"
            android:foregroundGravity="left"
            android:src="@drawable/backicon" />

        <ImageView
            android:id="@+id/imageOneLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:src="@drawable/logo" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/oneLayout"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="00dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Term and Conditions"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="#232121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/adamina"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:text="@string/paragraphtermandcondition"
                android:textStyle="italic"
                android:textColor="#2E2525" />

        </LinearLayout>


    </ScrollView>




</RelativeLayout>